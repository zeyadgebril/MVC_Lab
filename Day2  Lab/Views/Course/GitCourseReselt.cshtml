@model CourseFinalResultVm
@{
    ViewData["Title"] = "GitCourseReselt";
    Layout = "_MyLayout";

}

<style>

    .results-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    overflow: hidden;
    backdrop-filter: blur(10px);
    }

    .header-section {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    padding: 2.5rem;
    text-align: center;
    position: relative;
    }

    .header-section::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #3498db, #2ecc71, #f39c12, #e74c3c);
    }

    .course-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
    }

    .course-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    font-weight: 300;
    }

    .header-controls {
    position: absolute;
    top: 2rem;
    right: 2rem;
    }

    .edit-course-btn {
    background: linear-gradient(135deg, #f39c12, #e67e22);
    border: none;
    border-radius: 25px;
    padding: 0.75rem 1.5rem;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    box-shadow: 0 4px 15px rgba(243, 156, 18, 0.3);
    }

    .edit-course-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 25px rgba(243, 156, 18, 0.5);
    color: white;
    background: linear-gradient(135deg, #e67e22, #d35400);
    }

    .edit-course-btn i {
    margin-right: 0.5rem;
    font-size: 1rem;
    }

    .stats-row {
    background: #f8f9fa;
    padding: 1.5rem;
    border-bottom: 1px solid #e9ecef;
    }

    .stat-item {
    text-align: center;
    }

    .stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: #2c3e50;
    }

    .stat-label {
    font-size: 0.9rem;
    color: #6c757d;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    }

    .table-container {
    padding: 0;
    }

    .custom-table {
    margin-bottom: 0;
    }

    .custom-table thead th {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    color: white;
    border: none;
    padding: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.9rem;
    }

    .custom-table tbody tr {
    transition: all 0.3s ease;
    border-bottom: 1px solid #e9ecef;
    }

    .custom-table tbody tr:hover {
    background-color: #f8f9fa;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .custom-table td {
    padding: 1rem;
    vertical-align: middle;
    border: none;
    }

    .trainee-name {
    font-weight: 600;
    color: #2c3e50;
    }

    .score-fraction {
    font-family: 'Courier New', monospace;
    font-weight: 600;
    font-size: 1.1rem;
    }

    .badge-pass {
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    }

    .badge-fail {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    }

    .department-tag {
    background: #3498db;
    color: white;
    padding: 0.3rem 0.8rem;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 500;
    }

    .details-btn {
    background: linear-gradient(135deg, #667eea, #764ba2);
    border: none;
    border-radius: 25px;
    padding: 0.5rem 1.2rem;
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-size: 0.8rem;
    }

    .details-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 15px rgba(102, 126, 234, 0.4);
    color: white;
    }

    .footer-section {
    background: #f8f9fa;
    padding: 1.5rem;
    text-align: center;
    color: #6c757d;
    border-top: 1px solid #e9ecef;
    }

    @@media (max-width: 768px) {
    .course-title

    {
    font-size: 1.8rem;
    }

    .custom-table td {
    padding: 0.75rem 0.5rem;
    font-size: 0.9rem;
    }

    .details-btn {
    padding: 0.4rem 0.8rem;
    font-size: 0.75rem;
    }

    .header-controls {
    position: static;
    text-align: center;
    margin-top: 1rem;
    }

    .edit-course-btn {
    padding: 0.6rem 1.2rem;
    font-size: 0.8rem;
    }

    }
</style>




<div class="container-fluid main-container">
    <div class="row justify-content-center">
        <div class="col-lg-10 col-xl-8">
            <div class="results-card">
                <div class="header-section">


                    <h1 class="course-title">
                        <i class="fas fa-graduation-cap me-3"></i>
                        Course @Model.CouseName - Result
                    </h1>
                    <p class="course-subtitle">Final Results </p>
                </div>

                <div class="stats-row">
                    <div class="row">
                        <div class="col-md-3 stat-item">
                            <div class="stat-number text-primary">@Model.TotalStudent</div>
                            <div class="stat-label">Total Students</div>
                        </div>
                        <div class="col-md-3 stat-item">
                            <div class="stat-number text-success">@Model.TotalPassed</div>
                            <div class="stat-label">Passed</div>
                        </div>
                        <div class="col-md-3 stat-item">
                            <div class="stat-number text-danger">@Model.TotalFaild</div>
                            <div class="stat-label">Failed</div>
                        </div>
                        <div class="col-md-3 stat-item">
                            <div class="stat-number text-info">@Model.PassRate%</div>
                            <div class="stat-label">Pass Rate</div>
                        </div>
                    </div>
                </div>

                <div class="table-container">
                    <div class="table-responsive">
                        <table class="table custom-table">
                            <thead>
                                <tr>
                                    <th><i class="fas fa-user me-2"></i>Trainee Name</th>
                                    <th><i class="fas fa-chart-bar me-2"></i>Score</th>
                                    <th><i class="fas fa-check-circle me-2"></i>Status</th>
                                    <th><i class="fas fa-building me-2"></i>Department</th>
                                    <th><i class="fa-solid fa-chalkboard-user me-2"></i>Instructor</th>

                                    <th><i class="fas fa-cog me-2"></i>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TraneeiList)
                                {
                                    <tr>
                                        <td class="trainee-name">@item.TranieeName</td>
                                        <td><span class="score-fraction text-success">@item.Degree/@item.TotalDegree</span></td>
                                        <td><span class="badge-pass" style="background-color:@item.Color">@item.Status</span></td>
                                        <td><span class="department-tag">@item.DepartmentName</span></td>
                                        <td class="trainee-name">@item.InstructorName</td>

                                        <td>
                                            <a class="btn details-btn" asp-action="TraineeDetails" asp-controller="Trainee" asp-route-id="@item.TranieeId">
                                                <i class="fas fa-eye me-2"></i>Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="footer-section">
                    <p class="mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Generated on June 12, 2025
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    <i class="fas fa-user-graduate me-2"></i>
                    Trainee Details
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="modalContent">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">
                    <i class="fas fa-print me-2"></i>Print Report
                </button>
            </div>
        </div>
    </div>
</div>

<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center mt-5">
        @if (Model.CurrentPage > 1)
        {
            <li class="page-item">
                <a class="page-link" asp-action="GitCourseReselt" asp-controller="Course" asp-route-page="@(Model.CurrentPage-1)" asp-route-crName="@Model.CouseName">Previous</a>
            </li>
        }

        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="GitCourseReselt" asp-controller="Course" asp-route-page="@i" asp-route-crName="@Model.CouseName">@i</a>
            </li>
        }

        @if (Model.CurrentPage < Model.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" asp-action="GitCourseReselt" asp-controller="Course" asp-route-page="@(Model.CurrentPage+1)" asp-route-crName="@Model.CouseName">Next</a>
            </li>
        }
    </ul>
</nav>
@if (User.IsInRole("admin"))
{

<div class="fab-container">
    <div class="fab-tooltip">Edit</div>
    <a class="fab-button" asp-action="Edit" asp-controller="Course" asp-route-id="@Model.ID">
        <i class="fa-solid fa-pen"></i>
    </a>
</div>


<div class="del-fab-container">
    <button class="del-fab-button" data-id="@Model.ID">
        <i class="fa-solid fa-trash del-fab-icon"></i>
    </button>
    <div class="del-fab-tooltip">Delete Course</div>
</div>

<div class="del-fab-container">
    <div class="del-fab-tooltip">Delete Course</div>
    <button class="del-fab-button"
            data-id="@Model.ID"
            data-dept="@Model.CouseDepartmentId">
        <i class="fa-solid fa-trash"></i>
    </button>
</div>
<script>
    $(document).ready(function () {
        $(".del-fab-button").click(function (e) {
            e.preventDefault();

            var id = $(this).data("id");
            var deptId = $(this).data("dept");

            if (confirm("Are you sure you want to delete this course?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Course")',
                    type: 'POST',
                    data: {
                        id: id,
                        courseDepartmentID: deptId
                    },
                    success: function (response) {
                        // You can redirect, show a success message, etc.
                        alert("Course deleted successfully.");
                        window.location.href = '@Url.Action("Index", "Course")';
                    },
                    error: function () {
                        alert("Something went wrong while deleting the course.");
                    }
                });
            }
        });
    });
</script>
}

    

 
