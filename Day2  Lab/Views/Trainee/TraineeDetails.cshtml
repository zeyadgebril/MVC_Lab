@model TraineeDetailsVM
@{
    ViewData["Title"] = "TraineeDetails";
    Layout = "_MyLayout";

}


<style>
    .spicial{
        margin:10px auto !important
    }
    .container-fluid{
        max-width:80vw;
        margin-left:100px;
        margin: 10 auto
    }

    .main-container {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(10px);
    overflow: hidden;
    animation: slideIn 0.6s ease-out;
    }

    @@keyframes slideIn {
    from {
    opacity: 0;
    transform: translateY(30px);
    }
    to {
    opacity: 1;
    transform: translateY(0);
    }
    }

    .details-btn {
        background: linear-gradient(135deg, #667eea, #764ba2);
        border: none;
        border-radius: 25px;
        padding: 0.5rem 1.2rem;
        color: white;
        font-weight: 600;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.8rem;
    }

        .details-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .profile-header {
    background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
    color: white;
    padding: 30px;
    position: relative;
    overflow: hidden;
    }



    @@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.1); opacity: 0.8; }
    }

    .back-btn {
    background: rgba(255, 255, 255, 0.2);
    border: 2px solid rgba(255, 255, 255, 0.3);
    color: white;
    transition: all 0.3s ease;
    }

    .back-btn:hover {
    background: rgba(255, 255, 255, 0.3);
    border-color: rgba(255, 255, 255, 0.5);
    color: white;
    transform: translateX(-5px);
    }

    .profile-avatar {
    width: 120px;
    height: 120px;
    background: linear-gradient(45deg, #3498db, #2980b9);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 48px;
    color: white;
    margin: 0 auto 20px;
    border: 4px solid rgba(255, 255, 255, 0.3);
    position: relative;
    z-index: 1;
    }

    .info-card {
    background: white;
    border-radius: 15px;
    border: none;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    overflow: hidden;
    }

    .info-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
    }

    .info-card .card-header {
    background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
    color: white;
    border: none;
    font-weight: 600;
    padding: 15px 20px;
    }

    .status-badge {
    padding: 8px 16px;
    border-radius: 25px;
    font-weight: 600;
    font-size: 0.9em;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    }

    .status-pass {
    background: linear-gradient(135deg, #27ae60, #2ecc71);
    color: white;
    }

    .status-fail {
    background: linear-gradient(135deg, #e74c3c, #c0392b);
    color: white;
    }

    .grade-cell {
    font-weight: bold;
    font-size: 1.1em;
    }

    .grade-excellent {
    color: grey;
    }

    .grade-good {
    color: #f39c12;
    }

    .grade-poor {
    color: #e74c3c;
    }

    .course-row:hover {
    background-color: #f8f9fa;
    transform: scale(1.01);
    transition: all 0.2s ease;
    }

    .table th {
    background: linear-gradient(135deg, #34495e 0%, #2c3e50 100%);
    color: white;
    border: none;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: 15px;
    }

    .fade-in {
    animation: fadeIn 0.8s ease-in;
    }

    @@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
    }

    .info-item {
    padding: 12px 0;
    border-bottom: 1px solid #ecf0f1;
    }

    .info-item:last-child {
    border-bottom: none;
    }

    .info-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 5px;
    }

    .info-value {
    color: #34495e;
    font-size: 1.1em;
    }
</style>


<div class="container-fluid">
    <div class="main-container">
        <!-- Header with Back Button -->
        <div class="profile-header">
            <div class="row align-items-center">
                <div class="col-auto">
                    <button class="btn back-btn" onclick="goBack()">
                        <i class="fas fa-arrow-left me-2"></i>Back
                    </button>
                </div>
                <div class="col text-center">
                    <div class="profile-avatar">
                        <i class="fas fa-user-graduate"></i>
                    </div>
                    <h1 class="mb-2" style="position: relative; z-index: 1;">Trainee Profile Dashboard</h1>
                    <p class="mb-0" style="position: relative; z-index: 1;">Complete Academic Overview</p>
                </div>
                <div class="col-auto">
                    <!-- Spacer for symmetry -->
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="container-fluid p-4 spicial">
            <div class="row">
                <!-- Personal Information Card -->
                <div class="col-lg-4 mb-4">
                    <div class="card info-card h-100 fade-in">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-user me-2"></i>Personal Information
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="info-item">
                                <div class="info-label">Full Name</div>
                                <div class="info-value">@Model.traineName</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Trainee ID</div>
                                <div class="info-value">TRN-@Model.traineID</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Address</div>
                                <div class="info-value">@Model.traineAddress</div>
                            </div>
                            <div class="info-item">
                                <div class="info-label">Department</div>
                                <div class="info-value">
                                    <span class="badge bg-primary fs-6">@Model.traineDepartment</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- Academic Summary Card -->
                <div class="col-lg-8 mb-4">
                    <div class="card info-card fade-in">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-chart-line me-2"></i>Academic Summary
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row text-center">
                                <div class="col-md-3 mb-3">
                                    <div class="p-3 bg-light rounded">
                                        <h3 class="text-primary mb-1">@Model.traineTotalCources</h3>
                                        <small class="text-muted">Total Courses</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="p-3 bg-light rounded">
                                        <h3 class="text-success mb-1">@Model.trainePassedCources</h3>
                                        <small class="text-muted">Courses Passed</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="p-3 bg-light rounded">
                                        <h3 class="text-danger mb-1">@Model.traineFailedCources</h3>
                                        <small class="text-muted">Courses Failed</small>
                                    </div>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <div class="p-3 bg-light rounded">
                                        <h3 class="text-warning mb-1">@Model.traineSucessRate%</h3>
                                        <small class="text-muted">Success Rate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Details Table -->
            <div class="row">
                <div class="col-12">
                    <div class="card info-card fade-in">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="fas fa-book me-2"></i>Course Details & Performance
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead>
                                        <tr>
                                            <th>Course Code</th>
                                            <th>Course Name</th>
                                            <th>Grade</th>
                                            <th>Minimum Degree</th>
                                            <th>Percentage</th>
                                            <th>Status</th>
                                            <th>Instructor</th>
                                            <th>Action</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach(var item in Model.TraineeList)
                                        {
                                            <tr class="course-row">
                                                <td><strong>CS-@item.CourceID</strong></td>
                                                <td>@item.CourceName</td>
                                                <td class="grade-cell grade-excellent"> @item.CourceGrade / @item.CourceDegree </td>
                                                <td class="grade-cell grade-excellent"> @item.CoursMinDegree</td>

                                                <td>@item.CoursePersentageGrade%</td>
                                                <td>
                                                    @{
                                                        var badgeClass = item.CourceStatus.Trim().ToLower() == "pass" ? "status-pass" : "status-fail";
                                                    }
                                                    <span class="status-badge @badgeClass">
                                                        @item.CourceStatus
                                                    </span>


                                                </td>
                                                <td>@item.CourceInstructor</td>
                                                <td>
                                                    <form method="post" asp-action="SeeResult" asp-controller="Trainee">
                                                        <input type="hidden" name="TraineeName" value="@item.TNC.TraineeName" />
                                                        <input type="hidden" name="CourseName" value="@item.TNC.CourseName" />

                                                        <button type="submit" class="btn details-btn">
                                                            <i class="fas fa-eye me-2"></i>Details
                                                        </button>
                                                    </form>
                                                </td>

                                            </tr>
                                        }
                                        
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer Actions -->
            <div class="row mt-4">
                <div class="col-12 text-center">
                    <button class="btn btn-primary btn-lg me-3" onclick="printProfile()">
                        <i class="fas fa-print me-2"></i>Print Profile
                    </button>
                    <button class="btn btn-outline-primary btn-lg" onclick="exportData()">
                        <i class="fas fa-download me-2"></i>Export Data
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
@if (User.IsInRole("admin"))
{

<div class="fab-container">
    <div class="del-fab-tooltip">Delete Course</div>
    <button class="del-fab-button" data-id="@Model.traineID">
        <i class="fa-solid fa-trash"></i>
    </button>
</div>

}
<script>
    function goBack() {
              if (window.history.length > 1) {
                  window.history.back();
              } else {
                  alert('No previous page to go back to. ');
              }
          }
    $(document).ready(function () {
           $(".del-fab-button").click(function (e) {
               e.preventDefault();

               var id = $(this).data("id");

               if (confirm("Are you sure you want to delete this Trainee?")) {
                   $.ajax({
                       url: '@Url.Action("Delete", "Trainee")',
                       type: 'POST',
                       data: {
                           id: id
                       },
                       success: function (response) {
                           alert("Trainee deleted successfully.");
                           window.location.href = '@Url.Action("Index", "Trainee")';
                       },
                       error: function () {
                           alert("Something went wrong while deleting the Trainee.");
                       }
                   });
               }
           });
       });
</script>