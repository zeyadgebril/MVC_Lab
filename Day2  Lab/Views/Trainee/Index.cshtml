@model Trainee
@{
    Layout = "_MyLayout";

    ViewData["Title"] = "Details";
}
@section CSS{
    .form-container {
        background: white;
        border-radius: 15px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .form-header {
        background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
        color: white;
        border-radius: 15px 15px 0 0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #6c5ce7 0%, #a29bfe 100%);
        border: none;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #5f4fcf 0%, #9085e8 100%);
        }

    .form-control:focus {
        border-color: #6c5ce7;
        box-shadow: 0 0 0 0.2rem rgba(108, 92, 231, 0.25);
    }

}


  <div class="container-fluid d-flex align-items-center justify-content-center  py-5">
        <div class="col-12 col-md-8 col-lg-6 col-xl-4">
            <div class="form-container">
                
                <div class="form-header text-center py-4">
                    <i class="bi bi-train-front fs-1 mb-3"></i>
                <h2 class="mb-1">Train Result</h2>
                    
                </div>

                
                <div class="p-4">
                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.ID" class="form-label">
                                <i class="bi bi-train-front-fill me-2"></i>Train ID
                            </label>
                        <input type="text" asp-for="ID" class="form-control" i placeholder="Enter train ID" required>
                        </div>
                        <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg" asp-action="TraineeDetails" asp-controller="Trainee" asp-route-id="ID" >
                                <i class="bi bi-check-circle me-2"></i>
                                Result
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>





