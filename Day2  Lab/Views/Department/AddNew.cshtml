@model DepartmentDataVM
@{
    ViewData["Title"] = "Add";
    Layout = "_MyLayout";

}

@section CSS {

                .form-container {
                background: rgba(255, 255, 255, 0.95);
                backdrop-filter: blur(10px);
                border-radius: 20px;
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
                padding: 3rem;
                margin: 2rem auto;
                max-width: 800px;
                position: relative;
                overflow: hidden;
                }

                .form-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
                }

                .form-header {
                text-align: center;
                margin-bottom: 3rem;
                color: #333;
                }

                .form-header h1 {
                font-weight: 700;
                font-size: 2.5rem;
                margin-bottom: 0.5rem;
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
                }

                .form-header p {
                color: #666;
                font-size: 1.1rem;
                }

                .form-group {
                margin-bottom: 2rem;
                position: relative;
                }

                .form-label {
                font-weight: 600;
                color: #333;
                margin-bottom: 0.75rem;
                display: flex;
                align-items: center;
                font-size: 1.1rem;
                }

                .form-label i {
                margin-right: 0.5rem;
                color: #667eea;
                width: 20px;
                }

                .form-control, .form-select {
                border: 2px solid #e9ecef;
                border-radius: 12px;
                padding: 1rem 1.25rem;
                font-size: 1rem;
                transition: all 0.3s ease;
                background: white;
                }

                .form-control:focus, .form-select:focus {
                border-color: #667eea;
                box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
                transform: translateY(-2px);
                }

                .form-control:hover, .form-select:hover {
                border-color: #667eea;
                transform: translateY(-1px);
                }

                .input-group-text {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: none;
                color: white;
                border-radius: 12px 0 0 12px;
                padding: 1rem 1.25rem;
                }

                .btn-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                border: none;
                border-radius: 12px;
                padding: 1rem 3rem;
                font-size: 1.1rem;
                font-weight: 600;
                transition: all 0.3s ease;
                text-transform: uppercase;
                letter-spacing: 1px;
                }

                .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 25px rgba(102, 126, 234, 0.4);
                }

                .btn-secondary {
                background: #6c757d;
                border: none;
                border-radius: 12px;
                padding: 1rem 3rem;
                font-size: 1.1rem;
                font-weight: 600;
                transition: all 0.3s ease;
                }

                .btn-secondary:hover {
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(108, 117, 125, 0.4);
                }

                .required {
                color: #dc3545;
                margin-left: 0.25rem;
                }

                .form-floating {
                position: relative;
                }

                .form-floating > .form-control:focus ~ label,
                .form-floating > .form-control:not(:placeholder-shown) ~ label {
                opacity: 0.65;
                transform: scale(0.85) translateY(-0.5rem) translateX(0.15rem);
                }

                .validation-feedback {
                font-size: 0.9rem;
                margin-top: 0.5rem;
                }

                .card-preview {
                background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
                border-radius: 15px;
                padding: 2rem;
                margin-top: 2rem;
                border: 2px dashed #dee2e6;
                transition: all 0.3s ease;
                }

                .card-preview:hover {
                border-color: #667eea;
                transform: scale(1.02);
                }

                .preview-title {
                font-weight: 600;
                color: #333;
                margin-bottom: 1rem;
                display: flex;
                align-items: center;
                }

                .preview-title i {
                margin-right: 0.5rem;
                color: #667eea;
                }

                .preview-content {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
                gap: 1rem;
                }

                .preview-item {
                background: white;
                padding: 1rem;
                border-radius: 10px;
                border-left: 4px solid #667eea;
                }

                .preview-item strong {
                color: #333;
                display: block;
                margin-bottom: 0.25rem;
                }

                .preview-item span {
                color: #666;
                font-size: 0.95rem;
                }

                @@keyframes fadeInUp {
                from

                {
                opacity: 0;
                transform: translateY(30px);
                }

                to {
                opacity: 1;
                transform: translateY(0);
                }

                }

                .form-container {
                animation: fadeInUp 0.8s ease-out;
                }

                .form-group {
                animation: fadeInUp 0.6s ease-out;
                }

                .form-group:nth-child(2) {
                animation-delay: 0.1s;
                }

                .form-group:nth-child(3) {
                animation-delay: 0.2s;
                }

                .form-group:nth-child(4) {
                animation-delay: 0.3s;
                }

                .form-group:nth-child(5) {
                animation-delay: 0.4s;
                }

                .form-group:nth-child(6) {
                animation-delay: 0.5s;
                }

                .alert {
                border: none;
                border-radius: 12px;
                padding: 1rem 1.5rem;
                margin-bottom: 2rem;
                }

                .alert-success {
                background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
                color: #155724;
                border-left: 4px solid #28a745;
                }

                .back-button {
                background: rgba(255, 255, 255, 0.9);
                border: 2px solid #667eea;
                color: #667eea;
                border-radius: 50px;
                padding: 0.75rem 1.5rem;
                font-weight: 600;
                text-decoration: none;
                transition: all 0.3s ease;
                display: inline-flex;
                align-items: center;
                font-size: 0.95rem;
                backdrop-filter: blur(10px);
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
                margin-bottom: 1.5rem;
                }

                .back-button:hover {
                background: #667eea;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
                }

                .back-button i {
                margin-right: 0.5rem;
                transition: transform 0.3s ease;
                }

                .back-button:hover i {
                transform: translateX(-3px);
                }
                .special-margin{
                   margin-left:140px !important
                }

}



<div class="container d-flex flex-column ">
    <div class="mb-3  special-margin ">
        <a href="#" class="back-button" onclick="goBack()">
            <i class="fas fa-arrow-left"></i>
            Back to Department
        </a>
    </div>

    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-plus-circle me-3"></i>Add New Department</h1>
            <p>Fill in the details below to add a new Department to the catalog</p>
        </div>

        <form method="post" asp-action="AddNew" asp-controller="Department">

            <input type="hidden" value="@Model?.IsDeleted" asp-for="@Model.IsDeleted">

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.Name" class="form-label">
                            <i class="fa-solid fa-building"></i>
                            Department Name<span class="required">*</span>
                        </label>
                        <input class="form-control" asp-for="@Model.Name" required />

                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="@Model.Manager" class="form-label">
                            <i class="fa-solid fa-address-card"></i>Department Manager<span class="required">*</span>
                        </label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fa-solid fa-user-tie"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="@Model.Manager" required>
                        </div>
                    </div>
                </div>
            </div>




            <div class="text-center mt-4">
                <button type="button" class="btn btn-secondary me-3">
                    <i class="fas fa-undo me-2"></i>Reset Form
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Add Department
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
        function goBack() {
                  if (window.history.length > 1) {
                      window.history.back();
                  } else {
                      alert('No previous page to go back to. ');
                  }
              }

    }
