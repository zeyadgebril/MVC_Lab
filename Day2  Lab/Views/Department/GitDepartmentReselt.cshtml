@model DepartmentWithInstructorsInfoVM
@{
    ViewData["Title"] = "GitDepartmentReselt";
}
<style>


    .main-container {
        
        background: rgba(255, 255, 255, 0.98);
        backdrop-filter: blur(15px);
        border-radius: 25px;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        overflow: hidden;
        border: 1px solid rgba(255, 255, 255, 0.2);
        transition: all 0.4s ease;
    }

        .main-container:hover {
            transform: translateY(-8px);
            box-shadow: 0 35px 70px rgba(0, 0, 0, 0.2);
        }

    .header-section {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        color: white;
        position: relative;
        overflow: hidden;
        padding: 2.5rem 1.5rem;
    }

        .header-section::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
            animation: shimmer 3s ease-in-out infinite;
        }

    @@keyframes shimmer {
        0%, 100%

    {
        transform: translateX(-100%) rotate(45deg);
    }

    50% {
        transform: translateX(100%) rotate(45deg);
    }

    }

    .department-title {
        font-size: 3rem;
        font-weight: 800;
        text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.3);
        position: relative;
        z-index: 2;
        background: linear-gradient(45deg, #fff, #e8f4f8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .department-subtitle {
        font-size: 1.2rem;
        opacity: 0.9;
        position: relative;
        z-index: 2;
        font-weight: 300;
    }

    .back-button {
        background: rgba(255, 255, 255, 0.15);
        border: 2px solid rgba(255, 255, 255, 0.25);
        color: white;
        padding: 12px 24px;
        border-radius: 50px;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.3s ease;
        position: relative;
        z-index: 2;
        backdrop-filter: blur(10px);
    }

        .back-button:hover {
            background: rgba(255, 255, 255, 0.25);
            border-color: rgba(255, 255, 255, 0.4);
            color: white;
            transform: translateX(-8px) scale(1.05);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
        }

    .manager-card {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border: none;
        border-radius: 20px;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.08);
        transition: all 0.4s ease;
        position: relative;
        overflow: hidden;
    }

        .manager-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #3498db, #2ecc71, #e74c3c, #f39c12);
            background-size: 300% 100%;
            animation: gradientShift 4s ease infinite;
        }

   @@keyframes gradientShift {
        0%, 100%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    }

    .manager-card:hover {
        transform: translateY(-10px) scale(1.02);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
    }

    .manager-icon {
        width: 60px;
        height: 60px;
        background: linear-gradient(135deg, #3498db, #2980b9);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.5rem;
        box-shadow: 0 8px 20px rgba(52, 152, 219, 0.3);
        transition: all 0.3s ease;
    }

    .manager-card:hover .manager-icon {
        transform: rotate(360deg) scale(1.1);
        box-shadow: 0 12px 30px rgba(52, 152, 219, 0.4);
    }

    .manager-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .manager-name {
        font-size: 1.3rem;
        font-weight: 500;
        color: #34495e;
    }

    .no-manager {
        color: #95a5a6;
        font-style: italic;
    }

    .department-stats {
        background: linear-gradient(145deg, #f8f9fa, #ffffff);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        margin-bottom: 2rem;
    }

    .stat-item {
        text-align: center;
        padding: 1rem;
        border-radius: 15px;
        background: white;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .stat-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        }

    .stat-icon {
        width: 50px;
        height: 50px;
        margin: 0 auto 1rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
        color: white;
    }

        .stat-icon.employees {
            background: linear-gradient(135deg, #e74c3c, #c0392b);
        }

        .stat-icon.projects {
            background: linear-gradient(135deg, #2ecc71, #27ae60);
        }

        .stat-icon.budget {
            background: linear-gradient(135deg, #f39c12, #e67e22);
        }

    .stat-number {
        font-size: 2rem;
        font-weight: 800;
        color: #2c3e50;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        color: #7f8c8d;
        font-weight: 500;
        text-transform: uppercase;
        font-size: 0.9rem;
        letter-spacing: 1px;
    }

    .info-section {
        background: linear-gradient(145deg, #ffffff, #f8f9fa);
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    }

    .info-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .info-item {
        padding: 1rem;
        margin-bottom: 1rem;
        background: white;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
    }

        .info-item:hover {
            transform: translateX(10px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .info-label {
        font-weight: 600;
        color: #3498db;
        margin-bottom: 0.5rem;
    }

    .info-value {
        color: #2c3e50;
        font-size: 1.1rem;
    }

    @@media (max-width: 768px) {
        .department-title

    {
        font-size: 2.2rem;
    }

    .main-container {
        margin: 1rem;
        border-radius: 20px;
    }

    .header-section {
        padding: 2rem 1rem;
    }

    .back-button {
        padding: 10px 20px;
        font-size: 0.9rem;
    }

    }
</style>
<div class="container my-4 ms-1 ms-md-3 ms-lg-4 ">
    <div class="main-container ms-1 ms-md-3 ms-lg-5 ">
        <!-- Header Section -->
        <div class="header-section">
            <div class="row align-items-center">
                <div class="col-auto">
                    <a class="btn back-button" href="javascript:history.back()">
                        <i class="fa-solid fa-arrow-left"></i> Back
                    </a>
                </div>
                <div class="col text-center">
                    <h1 class="department-title mb-2" id="departmentName">@Model.DepartmentName</h1>
                    <p class="department-subtitle mb-0">Department Overview</p>
                </div>
                <div class="col-auto">
                    <!-- Spacer for centering -->
                </div>
            </div>
        </div>

        <!-- Content Section -->
        <div class="p-4">
            <!-- Manager Section -->
            <div class="card manager-card mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            <div class="manager-icon">
                                <i class="fa-solid fa-user-tie"></i>
                            </div>
                        </div>
                        <div class="col">
                            <h5 class="manager-title">Department Manager</h5>
                            <p class="manager-name mb-0" id="managerName">@Model.DepartmentManager</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Department Statistics -->
            <div class="department-stats">
                <h5 class="info-title mb-4">
                    <i class="bi bi-graph-up"></i>
                    Department Statistics
                </h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="stat-item">
                            <div class="stat-icon employees">
                                <i class="fa-solid fa-user"></i>
                            </div>
                            <div class="stat-number">@Model.TotalInstructors</div>
                            <div class="stat-label">Instrucors</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-item">
                            <div class="stat-icon projects">
                                <i class="fa-solid fa-square-check"></i>
                            </div>
                            <div class="stat-number">@Model.AllActiveCourses</div>
                            <div class="stat-label">Active Courses</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stat-item">
                            <div class="stat-icon budget">
                                <i class="fa-solid fa-dollar-sign"></i>
                            </div>
                            <div class="stat-number">$@Model.AllInstructorsSalary</div>
                            <div class="stat-label">Monthly Budget</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="fab-container">
    <div class="fab-tooltip">Edit</div>
    <a class="fab-button" asp-action="Edit" asp-controller="Department" asp-route-id="@Model.DeptId">
        <i class="fa-solid fa-pen"></i>
    </a>
</div>


<div class="del-fab-container">
    <button class="del-fab-button" data-id="@Model.DeptId">
        <i class="fa-solid fa-trash del-fab-icon"></i>
    </button>
    <div class="del-fab-tooltip">Delete Course</div>
</div>

<div class="del-fab-container">
    <div class="del-fab-tooltip">Delete Course</div>
    <button class="del-fab-button"
            data-id="@Model.DeptId"
            >
        <i class="fa-solid fa-trash"></i>
    </button>
</div>
<script>
    $(document).ready(function () {
        $(".del-fab-button").click(function (e) {
            e.preventDefault();

            var id = $(this).data("id");

            if (confirm("Are you sure you want to delete this Depatment?")) {
                $.ajax({
                    url: '@Url.Action("Delete", "Department")',
                    type: 'POST',
                    data: {
                        id: id,
                    },
                    success: function (response) {
                        // You can redirect, show a success message, etc.
                        alert("Department deleted successfully.");
                        window.location.href = '@Url.Action("Index", "Department")';
                    },
                    error: function () {
                        alert("Something went wrong while deleting the Department.");
                    }
                });
            }
        });
    });
</script>